<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AP.Views.CreateCategoryPage"
             Title="Создание категории">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Введите название категории" Margin="15,10,15,15"/>
            <RadioButton HorizontalOptions="Start" Margin="15,0,15,15" Content="Расходы"/>
            <RadioButton HorizontalOptions="Center" Margin="15,-51,15,15" Content="Доходы" />
            <Label Text="Иконки" Margin="15,0,15,15" FontSize="17" FontAttributes="Bold"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>